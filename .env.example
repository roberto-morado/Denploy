# Platform Configuration
PLATFORM_PORT=3000
PLATFORM_HOST=localhost
PLATFORM_DOMAIN=denploy.local

# User Apps Configuration
APPS_START_PORT=8001
APPS_BASE_PATH=/home/user/Denploy/apps

# Nginx Configuration
NGINX_CONFIG_PATH=/home/user/Denploy/nginx/sites-enabled
NGINX_TEMPLATE_PATH=/home/user/Denploy/nginx/templates

# Security
JWT_SECRET=your-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this

# Database
# Deno KV will use default location unless specified
# KV_PATH=./data/kv.db

# Logs
LOGS_PATH=/home/user/Denploy/logs
LOG_RETENTION_DAYS=7

# SSL/TLS (optional)
# SSL_CERT_PATH=/etc/letsencrypt/live/denploy.local/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/denploy.local/privkey.pem

# Resource Limits (per app)
MAX_MEMORY_MB=512
MAX_CPU_CORES=1
MAX_DISK_MB=1024

# Deployment
MAX_UPLOAD_SIZE_MB=50
MAX_DEPLOYMENTS_PER_APP=10
